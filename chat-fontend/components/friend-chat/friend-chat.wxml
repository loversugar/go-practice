<view
 bind:tap="onNavigateToChat"
 bind:touchstart="onTouchStart"
 bind:touchend="onTouchEnd"
 class="chat {{isTouchChange? 'chat-change': ''}}"
>
	<image class="profile" src="{{chatInfo.profile}}" />
	<view class="info">
		<view class="info-top">
			<view class="name">
				{{chatInfo.name}}
			</view>
			<view class="date">
				{{chatInfo.date}}
			</view>
		</view>
		<view class="info-bottom">
			{{chatInfo.content}}
		</view>
	</view>
</view>

