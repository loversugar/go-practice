/* pages/chat/chat.wxss */
.inputRoom {
    width: 100%;
    border-top: 1px solid #cdcdcd;
    background-color: #f1f1f1;
    position: fixed;
    height: 16vw;
    padding: 20rpx;
    bottom: 0;
    display: flex;
    align-items: center;
    box-sizing: border-box;
  }
  
input {
    width: inherit;
    height: 9.33vw;
    background-color: #fff;
    border-radius: 40rpx;
    margin-left: 2vw;
    margin-right: 2vw;
    margin-bottom: 20rpx;
    padding: 0 3vw;
    font-size: 28rpx;
    color: #444;
}

.send {
  display: block;
  height: 60rpx;
  width: 23rpx;
  flex: 1;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}